{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "outputs": [
                "dist/**"
            ],
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "coverage": {
            "outputs": [
                "coverage/**"
            ],
            "dependsOn": [
                "test"
            ]
        },
        "extract-translations": {
            "outputs": [
                "translations/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "lint:fix": {
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "typescript": {
            "dependsOn": [
                "^typescript"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        },
        "test:watch": {
            "dependsOn": [
                "^test:watch"
            ],
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": [
        "package.json",
        "tsconfig.json",
        ".eslintrc.js",
        "prettier.config.js"
    ]
}