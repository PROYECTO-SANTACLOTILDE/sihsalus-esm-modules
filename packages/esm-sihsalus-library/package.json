{
    "name": "@sihsalus/esm-sihsalus-library",
    "version": "1.0.0",
    "description": "Componentes y servicios compartidos para los m√≥dulos SIH SALUS",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MPL-2.0",
    "source": true,
    "scripts": {
        "start": "openmrs develop",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest --config jest.config.js --passWithNoTests",
        "test:watch": "jest --config jest.config.js --watch --passWithNoTests",
        "coverage": "jest --config jest.config.js --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "typescript": "tsc --noEmit",
        "extract-translations": "i18next 'src/**/*.{ts,tsx}' --config ../../tools/i18next-parser.config.js",
        "clean": "rimraf dist",
        "verify": "turbo lint typescript test"
    },
    "browserslist": [
        "extends browserslist-config-openmrs"
    ],
    "keywords": [
        "openmrs",
        "microfrontends",
        "shared-library",
        "components",
        "utilities",
        "peru",
        "sih-salus"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tu-org/sihsalus-esm-modules.git"
    },
    "author": "SIH SALUS Team",
    "bugs": {
        "url": "https://github.com/tu-org/sihsalus-esm-modules/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "src",
        "package.json",
        "README.md"
    ],
    "peerDependencies": {
        "@openmrs/esm-framework": "next",
        "dayjs": "1.x",
        "react": "18.x",
        "react-i18next": "15.x",
        "react-router-dom": "6.x"
    },
    "dependencies": {
        "@carbon/react": "^1.76.0",
        "classnames": "^2.5.1",
        "lodash-es": "^4.17.21"
    },
    "devDependencies": {
        "@openmrs/esm-framework": "next",
        "@types/lodash-es": "^4.17.12",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "dayjs": "^1.11.13",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^15.0.2",
        "react-router-dom": "^6.26.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.6.3"
    },
    "packageManager": "yarn@4.5.1"
