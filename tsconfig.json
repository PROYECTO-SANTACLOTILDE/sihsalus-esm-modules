{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@sihsalus/esm-sihsalus-library": ["./packages/esm-sihsalus-library/src"],
      "@openmrs/esm-framework": ["node_modules/@openmrs/esm-framework/src/index"]
    },
    "types": ["jest", "node", "webpack-env"]
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/types/**/*",
    "__mocks__/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.*",
    "**/__mocks__/**"
  ]
}
