{
    "name": "@sihsalus/esm-sihsalus-modules",
    "version": "1.0.0",
    "private": true,
    "description": "SIH SALUS ESM Modules - Microfrontends especializados para el contexto de salud peruano basados en OpenMRS 3.x",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "openmrs develop",
        "build": "turbo run build",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "test:e2e": "playwright test",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "typescript": "turbo run typescript",
        "verify": "turbo run lint typescript test --concurrency=1",
        "coverage": "turbo run coverage",
        "extract-translations": "turbo run extract-translations",
        "ci:publish": "yarn workspaces foreach --all npm publish --access public --tag latest",
        "ci:prepublish": "yarn workspaces foreach --all npm publish --access public --tag next",
        "release": "yarn workspaces foreach --all version",
        "clean": "turbo run clean",
        "dev": "turbo run dev",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@babel/core": "^7.25.0",
        "@carbon/react": "^1.76.0",
        "@openmrs/esm-framework": "next",
        "@playwright/test": "^1.50.1",
        "@swc/core": "^1.7.0",
        "@swc/jest": "^0.2.36",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/express": "^5",
        "@types/jest": "^29.5.13",
        "@types/lodash-es": "^4.17.12",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "@types/react-router-dom": "^5.3.3",
        "@types/semver": "^7",
        "@types/uuid": "^10.0.0",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "babel-preset-minify": "^0.5.2",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest-dom": "^5.4.0",
        "eslint-plugin-playwright": "^2.1.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-testing-library": "^6.3.0",
        "husky": "^9.1.6",
        "i18next": "^23.15.2",
        "i18next-parser": "^9.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.10",
        "openmrs": "next",
        "prettier": "^3.3.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^15.0.2",
        "react-router-dom": "^6.26.2",
        "sass": "^1.79.4",
        "sass-loader": "^16.0.2",
        "swc-loader": "^0.2.6",
        "swr": "^2.2.5",
        "turbo": "^2.1.3",
        "typescript": "^5.6.3",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": "eslint --cache --fix --max-warnings 0",
        "*.{css,scss,ts,tsx}": "prettier --cache --write --list-different"
    },
    "packageManager": "yarn@4.5.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/tu-org/sihsalus-esm-modules.git"
    },
    "author": "SIH SALUS Team",
    "license": "MPL-2.0",
    "keywords": [
        "openmrs",
        "microfrontends",
        "react",
        "typescript",
        "fhir",
        "peru",
        "salud",
        "sih-salus"
    ],
    "engines": {
        "node": ">=18.0.0",
        "yarn": ">=4.0.0"
    },
    "dependencies": {
        "browserslist-config-openmrs": "^1.0.1",
        "express": "^5.1.0",
        "http-proxy-middleware": "^3.0.5",
        "semver": "^7.7.2"
    }
}
