{
    "name": "@pucp-gidis-hiisc/esm-sihsalus-modules",
    "version": "1.0.4",
    "private": true,
    "description": "SIH SALUS ESM Modules - Microfrontends especializados para el contexto de salud peruano basados en OpenMRS 3.x",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "openmrs develop",
        "build": "yarn turbo run build --concurrency=1",
        "ci:publish": "yarn workspaces foreach --all --topological --exclude @pucp-gidis-hiisc/esm-sihsalus-modules npm publish --access public --tag latest",
        "ci:prepublish": "yarn workspaces foreach --all --topological --exclude @pucp-gidis-hiisc/esm-sihsalus-modules npm publish --access public --tag next",
        "release:patch": "yarn workspaces foreach --all --topological version patch --deferred && yarn workspaces foreach --all --topological version apply --all",
        "release:minor": "yarn workspaces foreach --all --topological version minor --deferred && yarn workspaces foreach --all --topological version apply --all",
        "release:major": "yarn workspaces foreach --all --topological version major --deferred && yarn workspaces foreach --all --topological version apply --all",
        "verify": "turbo run lint typescript test --concurrency=1",
        "test-e2e": "playwright test",
        "postinstall": "husky install"
    },
    "homepage": "https://github.com/PROYECTO-SANTACLOTILDE/sihsalus-esm-modules#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PROYECTO-SANTACLOTILDE/sihsalus-esm-modules.git"
    },
    "bugs": {
        "url": "https://github.com/PROYECTO-SANTACLOTILDE/sihsalus-esm-modules/issues"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@carbon/react": "^1.83.0",
        "@openmrs/esm-framework": "next",
        "@playwright/test": "^1.53.2",
        "@swc/core": "^1.2.165",
        "@swc/jest": "^0.2.29",
        "@testing-library/dom": "^9.3.3",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/jest": "^29.5.11",
        "@types/lodash-es": "^4.17.3",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.5",
        "@types/react-router-dom": "^5.3.3",
        "@types/uuid": "^8.3.0",
        "@types/webpack-env": "^1.16.0",
        "@types/yup": "^0.29.11",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "babel-preset-minify": "^0.5.1",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "dayjs": "^1.8.36",
        "dotenv": "^16.0.3",
        "eslint": "^8.55.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest-dom": "^5.4.0",
        "eslint-plugin-playwright": "^2.1.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-testing-library": "^6.2.2",
        "husky": "^8.0.3",
        "i18next": "^23.16.0",
        "i18next-parser": "^9.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.1",
        "openmrs": "next",
        "prettier": "^3.1.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-i18next": "^15.1.3",
        "react-router-dom": "^6.3.0",
        "rxjs": "^6.6.7",
        "sass": "^1.29.0",
        "sass-loader": "^10.1.0",
        "swc-loader": "^0.2.3",
        "swr": "2.2.5",
        "turbo": "^2.5.2",
        "typedoc": "^0.22.15",
        "typescript": "^5.7.2",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "lint-staged": {
        "*.{ts,tsx}": "eslint --cache --fix --quiet",
        "*.{css,scss,ts,tsx}": "prettier --cache --write --list-different"
    },
    "packageManager": "yarn@4.10.3"
}
